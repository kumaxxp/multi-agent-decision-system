{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "decision_v1",
  "type": "object",
  "required": ["summary","actions","risks","confidence","sources"],
  "properties": {
    "summary": {"type":"string","minLength":1},
    "actions": {"type":"array","minItems":1, "items":{"type":"string"}},
    "risks": {"type":"array","minItems":1, "items":{"type":"string"}},
    "confidence": {"type":"number","minimum":0.3,"maximum":1},
    "sources": {
      "type":"array","minItems":1,
      "items": {
        "type":"object",
        "oneOf": [
          {
            "required":["url","title"],
            "properties":{
              "url":{"type":"string"},
              "title":{"type":"string"},
              "quote":{"type":"string"}
            }
          },
          {
            "required":["query"],
            "properties":{"query":{"type":"string"}}
          }
        ]
      }
    }
  }
}
